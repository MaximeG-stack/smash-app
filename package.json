{
  "name": "smashi",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:mobile": "turbo run dev --filter=mobile",
    "dev:api": "turbo run dev --filter=api",
    "dev:dashboard": "turbo run dev --filter=dashboard",
    "dev:admin": "turbo run dev --filter=admin",
    "dev:server": "turbo run dev --filter=api",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:matching": "turbo run test:matching --filter=api",
    "lint": "turbo run lint",
    "db:migrate": "turbo run db:migrate --filter=api",
    "db:generate": "turbo run db:generate --filter=api",
    "db:studio": "turbo run db:studio --filter=api",
    "build:server": "turbo run build --filter=api"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
